<div class="heading">
  <h1> Register Library </h1>
</div>

<div class="msg">
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
</div>
<br>

<div class="forms">
  <%= form_for @library do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :university %><br>
      <%= form.text_field :university %>
    </p>

    <p>
      <%= form.label :location %><br>
      <%= form.text_field :location %>
    </p>

    <p>
      <%= form.label :maxdays %><br>
      <%= form.text_field :maxdays %>
    </p>

    <p>
      <%= form.label :fine %><br>
      <%= form.text_field :fine %>
    </p>

    <p>
      <%= form.submit %>
    </p>

  <% end %>
</div>