<div class="heading">
  <h1>Edit Librarian</h1></div>
</div>


<div class="msg">
  <ul>
    <% @librarian.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>

<div class="forms">
  <%= form_with scope: :librarian, url: admin_update_librarian_path , local: true do |form| %>
    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </p>

    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password %>
    </p>

    <p>
      <%= form.label :library %>
      <%= select("librarian", "library", Library.all.collect{ |c| [ c.name] }) %>
    </p>

    <p>
      <%= form.submit %>
    </p>

  <% end %>
</div>