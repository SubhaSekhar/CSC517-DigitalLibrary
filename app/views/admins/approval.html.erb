<div class="heading">
  <h1> Approve Librarian </h1>
</div>
<br/>

<div class="msg">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
</div>
<br>

<h2> Librarian </h2>
<div class="admin">
  <table>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Library</th>
      <th>Status</th>
    </tr>

    <% @approvals.each do |l| %>
      <tr>
        <td><%= l.email %></td>
        <td><%= l.name %></td>
        <td><%= l.library %></td>
        <td><%= link_to 'Approve', admins_approved_path(:lib_email => l.email) %></td>
      </tr>
    <% end %>
  </table>
  <br/>
</div>
